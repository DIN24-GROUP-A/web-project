<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

{{#if isAdmin}}
  <h2>Admin Panel</h2>

  <!-- User Management Section -->
  <div class="container mt-4">
    <h3>Manage Users</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{#if this.is_admin}}Admin{{else}}User{{/if}}</td>
            <td>
              {{#unless this.is_admin}}
                <!-- Promote button -->
                <form action="/make-admin/{{this.id}}" method="POST" style="display:inline">
                  <button type="submit" class="btn btn-primary btn-sm">Promote</button>
                </form>
              {{/unless}}
              <!-- Delete button -->
              <form action="/delete-user/{{this.id}}" method="POST" style="display:inline">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Feedback Section -->
  <div class="container mt-4">
    <h3>User Feedbacks</h3>
    {{#if feedbacks.length}}
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>User</th>
            <th>Topic</th>
            <th>Message</th>
            <th>Is Bug</th>
            <th>Resolved</th>
            <th>Submitted At</th>
          </tr>
        </thead>
        <tbody>
          {{#each feedbacks}}
            <tr>
              <td>{{this.user_name}}</td>
              <td>{{this.topic}}</td>
              <td>{{this.message}}</td>
              <td>{{#if this.isABug}}Yes{{else}}No{{/if}}</td>
              <td>
                {{#if this.resolved}}
                  Yes
                {{else}}
                  <form action="/feedback/resolve/{{this.id}}" method="POST" style="display:inline">
                    <button type="submit" class="btn btn-success btn-sm">Mark Resolved</button>
                  </form>
                {{/if}}
              </td>
              <td>{{this.created_at}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>No feedbacks available.</p>
    {{/if}}
  </div>

{{else}}
  <div class="container mt-5">
    <div class="p-4 mb-4 bg-light rounded shadow-sm text-center">
      <h2 class="mb-3">Welcome, {{name}} ðŸ‘‹</h2>
      <p>
        Ready to get started? You can calculate minimal reinforcement for your concrete sections
        or reach out to us if you have any questions.
      </p>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm text-center">
          <div class="card-body">
            <h5 class="card-title">âž• Start New Calculation</h5>
            <p class="card-text">Use our calculator to determine the minimum reinforcement required for beams, columns, or ties.</p>
            <a href="/canvas" class="btn btn-primary">Go to Calculation</a>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm text-center">
          <div class="card-body">
            <h5 class="card-title">ðŸ“© Contact Support</h5>
            <p class="card-text">Have a question or feedback? We're here to help!</p>
            <a href="/feedback" class="btn btn-outline-secondary">Contact Us</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
